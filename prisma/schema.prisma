generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Source {
  id            String       @id @default(uuid())
  code          String       @unique
  name          String
  oaiUrl        String
  availableSets String[]
  isActive      Boolean      @default(true)
  parserType    String       @default("a2a")
  parserConfig  Json?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  harvestLogs   HarvestLog[]

  @@map("Source")
}

model Record {
  id                 String   @map("id")
  eventYear          Int      @map("eventYear")
  sourceCode         String
  setSpec            String
  recordType         String
  eventMonth         Int?
  eventDay           Int?
  eventDatePrecision String?
  eventDateOriginal  String?
  eventPlace         String?
  rawData            Json
  createdAt          DateTime @default(now())
  persons            Person[]

  @@id([id, eventYear])
  @@index([sourceCode])
  @@index([recordType])
  @@index([eventYear])
  @@index([eventPlace])
  @@map("Record")
}

model Person {
  id         String  @id @default(uuid())
  recordId   String
  recordYear Int
  role       String
  givenName  String?
  surname    String?
  patronym   String?
  prefix     String?
  age        Int?
  birthYear  Int?
  occupation String?
  residence  String?
  record     Record  @relation(fields: [recordId, recordYear], references: [id, eventYear], onDelete: Cascade)

  @@index([recordId, recordYear])
  @@index([surname])
  @@index([role])
  @@index([birthYear])
  @@map("Person")
}

model HarvestLog {
  id               String        @id @default(uuid())
  sourceId         String
  setSpec          String
  status           HarvestStatus @default(IN_PROGRESS)
  resumptionToken  String?
  recordsHarvested Int           @default(0)
  filesCreated     Int           @default(0)
  startedAt        DateTime      @default(now())
  completedAt      DateTime?
  lastError        String?
  source           Source        @relation(fields: [sourceId], references: [id], onDelete: Cascade)

  @@unique([sourceId, setSpec])
  @@map("HarvestLog")
}

enum HarvestStatus {
  IN_PROGRESS
  COMPLETED
  PAUSED
  FAILED
}
